{
  "name": "Omerta",
  "version": "1.0",
  "description": "The right way to be social online",
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab",
    "https://*.infura.io/",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "scripts": ["bundle.js"],
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2,
  "content_scripts": [{
    "js": ["app.js"],
    "matches": ["https://*/*"]
  }],
  "web_accessible_resources": ["eth-crypto.js", "web3.js", "axios.js", "inject.js"]
}
